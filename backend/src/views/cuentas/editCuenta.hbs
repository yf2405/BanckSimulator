<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mx-auto">
      <h2 class="text-center">Editar Cuenta</h2>

      <form action="/cuentas/edit/{{cuenta.id_cuenta}}" method="POST">
        <div class="form-group">
          <label for="cuenta-id">ID Cuenta</label>
          <input type="text" value="{{cuenta.id_cuenta}}" class="form-control" id="cuenta-id" name="cuentaId" placeholder="ID Cuenta" required>
        </div>
        <div class="form-group">
          <label for="cuenta-cliente">ID Cliente</label>
          <input type="text" value="{{cuenta.id_cliente}}" class="form-control" id="cuenta-cliente" name="cuentaCliente" placeholder="ID Cliente" required>
        </div>
        <div class="form-group">
          <label for="cuenta-tipo">Tipo de Cuenta</label>
          <input type="text" value="{{cuenta.tipo_cuenta}}" class="form-control" id="cuenta-tipo" name="cuentaTipo" placeholder="Tipo de Cuenta" required>
        </div>
        <div class="form-group">
          <label for="cuenta-saldo">Saldo</label>
          <input type="text" value="{{cuenta.saldo}}" class="form-control" id="cuenta-saldo" name="cuentaSaldo" placeholder="Saldo" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
