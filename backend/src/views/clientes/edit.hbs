<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mx-auto">
      <h2 class="text-center">Editar Cliente</h2>

      <form action="/clientes/edit/{{cliente.id_cliente}}" method="POST">

        <div class="form-group">
          <label for="cliente-id">ID Cliente</label>
          <input type="text" value="{{cliente.id_cliente}}" class="form-control" id="cliente-id" name="clienteId" placeholder="ID Cliente" required>
        </div>
        <div class="form-group">
          <label for="cliente-nombre">Nombre</label>
          <input type="text" value="{{cliente.nombre}}" class="form-control" id="cliente-nombre" name="clienteNombre" placeholder="Nombre" required>
        </div>
        <div class="form-group">
          <label for="cliente-direccion">Dirección</label>
          <input type="text" value="{{cliente.direccion}}" class="form-control" id="cliente-direccion" name="clienteDireccion" placeholder="Dirección" required>
        </div>
        <div class="form-group">
          <label for="cliente-telefono">Teléfono</label>
          <input type="text" value="{{cliente.telefono}}" class="form-control" id="cliente-telefono" name="clienteTelefono" placeholder="Teléfono" required>
        </div>
        <div class="text-center">
       <button type="submit" class="btn btn-success">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>

